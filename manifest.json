{
  "id": "kz.cardadvisor.pwa",
  "name": "Card Advisor KZ - Лучшие банковские карты Казахстана",
  "short_name": "Card Advisor KZ",
  "description": "PWA приложение для выбора лучших банковских карт по категориям трат. 75+ карт от 9 банков Казахстана с персональными рекомендациями.",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#FFFFFF",
  "theme_color": "#3B82F6",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "ru",
  "dir": "ltr",
  "prefer_related_applications": true,
  "display_override": ["window-controls-overlay", "standalone"],
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=io.github.kasadi97.twa",
      "id": "io.github.kasadi97.twa"
    },
    {
      "platform": "webapp",
      "url": "https://kasadi97.github.io/"
    }
  ],
  "scope_extensions": [
    {"origin": "kasadi97.github.io/"},
    {"origin": "*.github.io/"}, 
    {"origin": "freedombank.onelink.me/"}
  ],
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "share_target": {
    "action": "/share-target/",
    "method": "POST",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "file_handlers": [
    {
      "action": "/open-csv",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"]
      },
      "icons": [
        {
          "src": "/icons/icon-192x192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+cardadvisor",
      "url": "/?action=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "android": {
    "display": "standalone",
    "orientation": "portrait",
    "status_bar_color": "#3B82F6",
    "navigation_bar_color": "#FFFFFF",
    "navigation_bar_divider_color": "#F8F9FA",
    "background_color": "#FFFFFF",
    "packageName": "io.github.kasadi97.twa"
  },
  "widgets": [
    {
      "name": "Мои карты",
      "description": "Быстрый доступ к вашим банковским картам",
      "tag": "my-cards",
      "template": "my-cards-template",
      "ms_ac_template": "adaptive-card.json",
      "data": "widget-data.json",
      "type": "text/plain",
      "screenshots": [
        {
          "src": "/icons/screenshot-narrow.svg",
